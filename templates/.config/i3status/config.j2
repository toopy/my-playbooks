general {
        colors = true
        interval = 5
}

order += "load"
order += "disk /"
order += "ethernet eth0"
order += "wireless wlan0"
order += "battery 0"
order += "battery 1"
order += "tztime local"
order += "volume master"

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

battery 0 {
        # format = "%status %percentage %remaining"
        format = "%percentage"
        path = "/sys/class/power_supply/BAT0/uevent"
}

battery 1 {
        # format = "%status %percentage %remaining"
        format = "%percentage"
        path = "/sys/class/power_supply/BAT1/uevent"
}


tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = "â™ª: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
